rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Los usuarios pueden leer y escribir su propio documento de perfil del panel.
    // Se añade la regla 'create' para permitir el registro de nuevos operadores/admins.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Los administradores tienen control total sobre las estaciones.
    match /stations/{stationId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;

      // Un administrador también puede gestionar las unidades de una estación.
      match /unidades/{unitId} {
        allow read, write: if request.auth.token.admin == true;
      }
    }
    
    // Los usuarios pueden escribir su propia información médica,
    // y cualquier usuario autenticado en el sistema (como un operador) puede leerla.
    match /medicalInfo/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    
    // --- REGLAS CORREGIDAS PARA ALERTAS ---
    // Reglas granulares y seguras para la colección de alertas.
    match /alerts/{alertId} {
      // Cualquier usuario (incluido anónimo) puede crear una alerta.
      allow create;

      // Permisos de lectura (get, list)
      allow read: if request.auth != null && 
                  (request.auth.token.admin == true || 
                  resource.data.assignedStationId == request.auth.token.stationId ||
                  resource.data.userId == request.auth.uid);

      // Permisos de actualización
      allow update: if request.auth != null &&
                     (request.auth.token.admin == true ||
                     (resource.data.assignedStationId == request.auth.token.stationId) ||
                     (resource.data.userId == request.auth.uid)); // Permite al usuario cancelar su propia alerta
    }
  }
}
