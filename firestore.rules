rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Los usuarios pueden leer y escribir su propio documento.
    // Se añade la regla de 'create' para permitir el registro de nuevos operadores.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /stations/{stationId} {
      allow read, write: if request.auth.token.admin == true;
      
      match /unidades/{unitId} {
        allow read, write: if request.auth.token.admin == true;
      }
    }
    
    match /medicalInfo/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    
    match /alerts/{alertId} {
      allow create: if request.auth != null;

      allow get: if request.auth != null;
      
      // Permite listar si eres admin, o si la consulta filtra por tu stationId
      allow list: if (request.auth.token.admin == true) || 
                     (request.query.where.get("assignedStationId") == request.auth.token.stationId);

      // Permite actualizar si eres admin, si la alerta es de tu estación, o si eres el creador y la estás cancelando.
      allow update: if (request.auth.token.admin == true) || 
                       (resource.data.assignedStationId == request.auth.token.stationId) ||
                       (request.resource.data.status == 'cancelled' && resource.data.userId == request.auth.uid);
    }
  }
}
