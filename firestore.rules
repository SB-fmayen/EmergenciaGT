
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- USERS (Admin Panel) ---
    // Solo los administradores pueden leer la lista completa de usuarios
    // y solo ellos pueden actualizar el rol o stationId de otro usuario.
    // Un usuario puede actualizar su propio documento (ej: lastLogin).
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow list, write: if request.auth.token.admin == true;
    }

    // --- MEDICAL INFO (Mobile App) ---
    // La información médica es privada. Solo el propio usuario puede crearla,
    // leerla o actualizarla. Los administradores NO tienen acceso aquí,
    // pero pueden verla cuando se une a una alerta (ver regla de 'alerts').
    match /medicalInfo/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- ALERTS ---
    // Los administradores tienen acceso total.
    // Los operadores solo pueden leer las alertas asignadas a su estación.
    // El usuario móvil puede crear alertas y leer/actualizar las suyas.
    match /alerts/{alertId} {
      // Regla de Lectura (GET, LIST)
      allow get: if request.auth != null; // Cualquiera autenticado puede obtener un doc si conoce el ID
      allow list: if request.auth.token.admin == true || 
                     (request.auth.token.admin == false && request.query.where.get("assignedStationId") == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.stationId);
      
      // Regla de Escritura (CREATE, UPDATE, DELETE)
      allow create: if request.auth != null; // Cualquier usuario autenticado (móvil o admin) puede crear
      allow update: if request.auth.token.admin == true || 
                       (request.resource.data.userId == request.auth.uid && request.resource.data.status == 'cancelled'); // El usuario puede cancelar su propia alerta.
      allow delete: if request.auth.token.admin == true;
    }
    
    // --- STATIONS ---
    // Solo los administradores pueden crear, modificar o eliminar estaciones.
    // Cualquier usuario autenticado (operadores, admins) puede leer la lista de estaciones
    // para poblar los menús desplegables.
    match /stations/{stationId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth.token.admin == true;

      // Unidades dentro de una estación
      match /unidades/{unidadId} {
        allow read, write: if request.auth.token.admin == true;
      }
    }
  }
}
