rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Los usuarios pueden leer y escribir su propio documento.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /stations/{stationId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
      // Permitir a los admins gestionar las unidades dentro de una estación
      match /unidades/{unitId} {
        allow read, write: if request.auth.token.admin == true;
      }
    }
    
    // Reglas para la información médica
    match /medicalInfo/{userId} {
      // El propio usuario puede escribir su información
      allow write: if request.auth != null && request.auth.uid == userId;
      // Cualquier usuario autenticado (admin/operador) puede leerla para una emergencia
      allow read: if request.auth != null;
    }
    
    // Reglas para las alertas
    match /alerts/{alertId} {
      // Cualquiera (incluyendo usuarios anónimos de la app) puede crear una alerta.
      allow create: if request.auth != null;
      
      // La lectura y actualización se permiten si:
      // 1. El usuario es un administrador.
      // 2. O, el stationId en el token del usuario coincide con el ID de la estación asignada a la alerta.
      // 3. O, es el usuario que creó la alerta (para poder cancelarla).
      allow read, update: if request.auth != null &&
        (request.auth.token.admin == true || 
         resource.data.assignedStationId == request.auth.token.stationId ||
         resource.data.userId == request.auth.uid);
    }
  }
}
