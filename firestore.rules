rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserAdmin() {
      return isUserAuthenticated() && request.auth.token.admin == true;
    }

    function isUserOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow get: if isUserAuthenticated();
      allow list: if isUserAdmin();
      allow create: if isUserAuthenticated();
      allow write: if isUserAdmin() || isUserOwner(userId);
    }
    
    // --- Stations Collection ---
    match /stations/{stationId} {
      allow read, write: if isUserAdmin();
      
      // Allow access to subcollections for admins
      match /unidades/{unitId} {
        allow read, write: if isUserAdmin();
      }
    }
    
    // --- MedicalInfo Collection ---
    match /medicalInfo/{userId} {
      // The owner can write their own data.
      allow write: if isUserOwner(userId);
      // Any authenticated user (admin, operator reading an alert) can read medical info.
      allow read: if isUserAuthenticated();
    }
    
    // --- Alerts Collection ---
    match /alerts/{alertId} {
      // Any user (including anonymous) can create an alert.
      allow create: if isUserAuthenticated();
      
      // Admins can read/update any alert.
      // Operators can read/update an alert assigned to their station.
      allow read, update: if isUserAdmin() || (resource.data.assignedStationId == request.auth.token.stationId);

      // A user can list alerts if they are an admin OR if they are an operator querying for their station.
      allow list: if isUserAdmin() || (request.query.where.keys().hasAny(['assignedStationId']));
    }
  }
}
