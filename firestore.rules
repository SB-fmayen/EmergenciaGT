
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Los usuarios pueden crear su propio perfil al registrarse,
    // y luego leer y actualizar su propio documento.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Solo los administradores pueden gestionar las estaciones.
    match /stations/{stationId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Un usuario solo puede escribir en su propia información médica,
    // pero cualquier usuario autenticado (como un operador) puede leerla.
    match /medicalInfo/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    
    // --- REGLAS DETALLADAS Y SEGURAS PARA ALERTAS ---
    match /alerts/{alertId} {
      // Cualquier usuario (incluido anónimo) puede crear una alerta.
      allow create: if request.auth != null;

      // Un usuario puede LEER una alerta si:
      // 1. Es un administrador.
      // 2. Es un operador y la alerta está asignada a su estación.
      // 3. Es el usuario que creó la alerta.
      allow read: if request.auth != null && 
                  (request.auth.token.admin == true || 
                   resource.data.assignedStationId == request.auth.token.stationId ||
                   resource.data.userId == request.auth.uid);

      // Un usuario puede ACTUALIZAR una alerta si:
      // 1. Es un administrador.
      // 2. Es un operador y la alerta está asignada a su estación.
      // 3. Es el usuario que la creó y la va a cancelar (status == 'new').
      allow update: if request.auth != null &&
                    (request.auth.token.admin == true ||
                     resource.data.assignedStationId == request.auth.token.stationId ||
                     (resource.data.userId == request.auth.uid && resource.data.status == 'new'));
    }
  }
}
