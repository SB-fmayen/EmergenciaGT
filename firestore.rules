rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de utilidad ---
    function isAuth() {
      return request.auth != null;
    }
    function isUser(uid) {
      return isAuth() && request.auth.uid == uid;
    }
    function isAdmin() {
      return isAuth() && request.auth.token.admin == true;
    }
    function isOperator() {
      // Un operador es un usuario con el token de "operador" o un ID de estación.
      return isAuth() && (request.auth.token.operator == true || request.auth.token.stationId != null);
    }
    function isUnit() {
      return isAuth() && request.auth.token.unit == true;
    }

    // --- Colección de Usuarios ---
    match /users/{userId} {
      allow read: if isUser(userId) || isAdmin();
      allow create: if isAuth();
      allow update: if isUser(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // --- Colección de Información Médica ---
    match /medicalInfo/{userId} {
      // El usuario es dueño de sus datos, pero los servicios de emergencia pueden leerlos.
      allow read, create, update: if isUser(userId) || isAdmin() || isOperator() || isUnit();
    }

    // --- Colección de Estaciones ---
    match /stations/{stationId} {
      allow read: if isAuth(); // Todos los autenticados pueden ver las estaciones.
      allow create, update, delete: if isAdmin(); // Solo admins pueden gestionarlas.

      // Subcolección de unidades
      match /unidades/{unitId} {
        allow read: if isAuth();
        // Admins u operadores de esa estación pueden gestionar unidades.
        allow create, update, delete: if isAdmin() || (isOperator() && request.auth.token.stationId == stationId);
      }
    }

    // --- Colección de Alertas (REGLAS CORREGIDAS) ---
    match /alerts/{alertId} {
      allow create: if isAuth(); // Cualquier usuario autenticado puede crear una alerta.

      // GET (Leer un solo documento):
      // Permite a admins y operadores ver el detalle de cualquier alerta.
      allow get: if isAdmin() || isOperator()
        || (isUnit() && resource.data.assignedUnitId == request.auth.token.unitId)
        || (isUser(resource.data.userId));

      // LIST (Consultar una colección):
      // Permite a admins y operadores listar todas las alertas para el dashboard.
      allow list: if isAdmin() || isOperator() || isUser(resource.data.userId);

      // UPDATE (Actualizar un documento):
      // Esta es la corrección clave para permitir la asignación.
      allow update: if
        // Los admins y operadores tienen permisos completos de actualización.
        // Esto permite a los operadores asignar una alerta no asignada.
        isAdmin() || isOperator()
        ||
        // Una unidad solo puede actualizar una alerta que le fue asignada.
        (isUnit() && resource.data.assignedUnitId == request.auth.token.unitId)
        ||
        // El usuario creador solo puede cancelar la alerta.
        (isUser(resource.data.userId) &&
          request.resource.data.status == 'cancelled');

      // DELETE: No se permite borrar alertas para mantener un historial.
      allow delete: if false;
    }
  }
}
