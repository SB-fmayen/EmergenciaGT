
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección 'stations'
    // Solo los administradores pueden gestionar las estaciones
    match /stations/{stationId} {
      allow get, list: if request.auth != null && request.auth.token.admin == true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Reglas para la colección de 'users'
    // Solo los administradores pueden leer perfiles y los usuarios su propio perfil.
    // Los roles se manejan con 'custom claims' desde el backend.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == userId);
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para la información médica
    // Los usuarios solo pueden ver y editar su propia información.
    // El personal de emergencia (admins/operators) accede a esta info a través de una función de servidor segura.
    match /medicalInfo/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para las alertas
    // Cualquier usuario autenticado puede crear alertas.
    // Solo los operadores o administradores pueden actualizar el estado de una alerta.
    match /alerts/{alertId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
    }

  }
}
